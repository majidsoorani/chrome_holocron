{
  "manifest_version": 3,
  "name": "Holocron Status",
  "version": "1.0",
  "description": "Displays the status of the SSH Holocron tunnel.",
  "permissions": ["nativeMessaging", "alarms", "storage", "proxy"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Holocron Status",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
